root = true

[*]
indent_style = space
max_line_length = 120
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = false

[Makefile]
indent_style = tab
indent_size = 8

[*.md]
insert_final_newline = true
trim_trailing_whitespace = true
indent_size = 2

[*.{toml,json,yaml,yml}]
indent_size = 2

[*.{html,css,scss}]
indent_size = 2
